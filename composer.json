{
    "name": "minifw/common",
    "type": "library",
    "description": "common data for minifw",
    "keywords": ["php", "framework"],
    "homepage": "https://github.com/minifw/common",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Yang Ming",
            "email": "yangming0116@163.com",
            "role": "Developer"
        }
    ],
    "config": {
        "preferred-install": {
            "*": "dist"
        }
    },
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "phpunit/phpunit": "5.*",
        "squizlabs/php_codesniffer": "^3.0.2",
        "phpcompatibility/php-compatibility": "*"
    },
    "autoload": {
        "psr-4": {
            "Minifw\\Common\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Minifw\\Common\\Test\\": "tests/"
        }
    }
}