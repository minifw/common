{
    "name": "minifw/common",
    "type": "library",
    "description": "common data for minifw",
    "keywords": [
        "php",
        "framework"
    ],
    "homepage": "https://github.com/minifw/common",
    "license": "LGPL-3.0-or-later",
    "authors": [
        {
            "name": "Yang Ming",
            "email": "yangming0116@163.com",
            "role": "Developer"
        }
    ],
    "scripts": {
        "test": "./vendor-bin/phpunit/vendor/bin/phpunit ."
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true
        },
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "Minifw\\Common\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Minifw\\Common\\Test\\": "tests/"
        }
    }
}
